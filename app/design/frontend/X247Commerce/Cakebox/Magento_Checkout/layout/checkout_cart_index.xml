<?xml version="1.0"?>
<!--
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Basket</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="checkout.cart.coupon" remove="true"/>
        <block class="Magento\Checkout\Block\Cart\Coupon" name="checkout.cart.coupon.sidebar" as="coupon" template="Magento_Checkout::cart/coupon.phtml"/>
        <move element="checkout.cart.coupon.sidebar" destination="cart.summary" before="-"/>
    </body>
</page>