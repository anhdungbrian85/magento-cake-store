<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <title>My Reminders</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">My Reminders</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="X247Commerce\Customer\Block\Account\EventList\Index" name="event-list-customer" template="X247Commerce_Customer::account/event-list.phtml"/>
        </referenceContainer>
    </body>
</page>