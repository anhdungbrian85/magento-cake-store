<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="x247commerce_customer" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Customer</label>
            <tab>x247commerce</tab>
            <resource>X247Commerce_PopupAddtoCart::customer_config</resource>
            <group id="event" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Customer Event</label>
                <field id="email_template" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Select Email Template</label>
                    <source_model>X247Commerce\Customer\Model\Config\Source\ListEmailTemplate</source_model>
                </field>
                <field id="send_mail_save" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Send email when create/edit event</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>