<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="x247commerce" translate="label" sortOrder="10">
            <label>X247Commerce</label>
        </tab>
        <section id="changestatusorder" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Change Status Order</label>
            <tab>x247commerce</tab>
            <resource>X247Commerce_ChangeOrderStatus::changestatusorder_config</resource>
            <group id="general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Configuration</label>
                <field id="day_number" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Number of Days</label>
                    <comment>Please enter the number of days to automatically complete the order.</comment>
                    <validate>integer</validate>
                </field>
            </group>
        </section>
    </system>
</config>