<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="checkout_cart_add_product_complete">
        <observer name="x247_update_store_location_to_quote" instance="X247Commerce\Checkout\Observer\Quote\UpdateStoreLocationSelected" />
    </event>
    <event name="sales_model_service_quote_submit_before">
        <observer name="x247_update_store_location_to_order" instance="X247Commerce\Checkout\Observer\Order\UpdateStoreLocationSelected" />
    </event>
    <event name="sales_model_service_quote_submit_success">
        <observer name="Amasty_StorePickupWithLocator::amasty_storepickup_place_save" disabled="true" />
        <observer name="X247Commerce_Checkout::x247commerce_storepickup_place_save" instance="X247Commerce\Checkout\Observer\Sales\Order\AfterPlaceOrder" />
    </event>
