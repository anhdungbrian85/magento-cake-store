<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="sync">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">massSync</item>
                        <item name="label" xsi:type="string" translate="true">Sync data from Yext</item>
                        <item name="url" xsi:type="url" path="yext/entity/massSync">
                            <!-- <param name="action">sync</param> -->
                        </item>
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Sync items</item>
                            <item name="message" xsi:type="string" translate="true">Updating many locations at once can take a long time. Do you want to continue?</item>
                        </item>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
</listing>